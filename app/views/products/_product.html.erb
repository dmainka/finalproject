<div class="row-fluid">
  <div class="span4">
    <li>
      <h4><%= link_to product.name, product %></h4>

      <p><%= link_to image_tag(product.image_url,  width: "150", height: "250"), product %></p>
      <%= link_to "View details Â»", product, :class => "btn btn-info" %>
      <% if signed_in? %>
        <%= link_to "Add to cart", cart_items_path(:product_id => product), :method => :post, :class => "btn btn-success" %>
      <% else %>
        <%= link_to "Add to cart", signin_path, :class => "btn btn-success" %>
      <% end %>

    </li>
  </div>

  <div class="span8">
    <li>
      <br>
      <p><b>Department: </b><%= Department.find(product.department_id).name  %></p>
      <p><b>Description: </b><%= product.description %></p>
      <p><b>Price: </b><%= number_to_currency(product.price) %></p>
      <p>
        <b>Vendor: </b><%= link_to Vendor.find(Product.find(product.id).vendor_id).name, Vendor.find(Product.find(product.id).vendor_id) %>,
        <b> Vendor Avg Rating: </b>
        <% Vendor.find(Product.find(product.id).vendor_id).rating.times do %>
          <i class="fa fa-star"></i>
        <% end %>
      </p>
    </li>
  </div>
</div>
