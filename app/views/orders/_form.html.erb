<div class="row">
  <div class="span6 offset3">
    <%= form_for(@order) do |f| %>

      <%= render :partial => 'shared/error_messages', :locals => {:object => @order} %>

      <div class="field">
        <%= f.label :ship_to_name %><br />
        <%= f.text_field :ship_to_name, :size => 40 %>
      </div>
      <div class="field">
        <%= f.label :ship_to_address %><br />
        <%= f.text_area :ship_to_address, :rows => 3, :cols => 40 %>
      </div>
      <div class="field">
        <%= f.label :payment_type %><br />
        <%= f.select :payment_type, Order::PAYMENT_TYPES, :prompt => 'Select a payment method' %>
      </div>
      <div class="actions">
        <%= f.submit 'Place Order', class: "btn btn-primary", :confirm => "Are you sure you want to place this order?"  %>
      </div>
    <% end %>
  </div>
</div>
